@{
	var navPosition = Razzle.Contracts.Enums.NavigationPositions.Right;
}

<div class="razzle-nav-host @(navPosition.ToString().ToLower()) expanded">
	<div class="razzle-nav-toggle" title="Close" data-razzle-target=".razzle-nav" data-razzle-toggle="expanded">
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
		<span class="icon-bar"></span>
	</div>
</div>
<div class="@(navPosition.ToString().ToLower()) razzle-nav expanded razzle-nav-primary razzle-side-navbar">
	<ul class="nav nav-expanded">
		<li class="no-filter nav-search man mbs pan">
			<div class="form-group man pan">
				<input type="search" placeholder="Search" class="search-field man" />
				<button type="button" class="clear fa fa-search" data-search-icon="fa-search" data-search-title="Search" data-clear-icon="fa-close" data-clear-title="Clear"></button>
			</div>
		</li>
		@(this.RenderUserNavigation())
		<li class="divider"></li>
		@(this.RenderDocumentationNavigation())
	</ul>
</div>

