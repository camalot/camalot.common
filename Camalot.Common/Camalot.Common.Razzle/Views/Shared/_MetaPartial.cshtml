@{
	var imageName = "icon";
}
<meta charset="utf-8" />

<meta name="msapplication-TileColor" content="#FFFFFF">
<link href="~/assets/images/@(imageName)-16.png" rel="shortcut icon" type="image/png" />
<meta name="msapplication-TileImage" content="~/assets/images/@(imageName)-144.png">
<link rel="apple-touch-icon-precomposed" sizes="152x152" href="~/assets/images/@(imageName)-152.png">
<link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/assets/images/@(imageName)-144.png">
<link rel="apple-touch-icon-precomposed" sizes="120x120" href="~/assets/images/@(imageName)-120.png">
<link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/assets/images/@(imageName)-114.png">
<link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/assets/images/@(imageName)-72.png">
<link rel="apple-touch-icon-precomposed" href="~/assets/images/@(imageName)-57.png">
<link href="~/assets/images/@(imageName)-32.png" sizes="32x32" rel="icon" type="image/png" />
<meta property="og:image" content="~/assets/images/@(imageName)-152.png" />

<meta name="viewport" content="width=device-width" />
<meta property="og:title" content="@(ViewBag.Title)" />
<meta property="og:description" content="@(Html.SiteDescription())" />

