@model Camalot.Common.Site.Models.Documentation.Xml.Member

<div class="member">
	@if(Model.Summary.Count > 0) {
		<div class="callout callout-success">
			@foreach(var s in Model.Summary) {
				if(!string.IsNullOrWhiteSpace(s.Value)) { 
					<p class="man mbs pan">@s</p>
				}
			}
		</div>
	}
	

	@if(Model.Remarks.Count > 0) {
		<div class="callout callout-primary">
			@foreach(var s in Model.Remarks) {
				if(!string.IsNullOrWhiteSpace(s.Value)) {
					<p class="man mbs pan">@s</p>
				}
			}
		</div>
	}
	
	@if(Model.Gists.Count > 0) {
		<div class="gist-host">
			@foreach(var s in Model.Gists) {
				if(!string.IsNullOrWhiteSpace(s.Description)) { 
					<div class="callout">@s.Description</div>
				}
				<text>@Html.Action("Gist", new { controller = "Assets", id = s.Id })</text>
			}
		</div>
	}
	
	@if(Model.Params.Count > 0) {
			<h4 class="zero">Parameters</h4>
			<div class="callout">
				@foreach(var s in Model.Params) {
					<dl>
						@if(!string.IsNullOrWhiteSpace(s.Value)) {
							<dd>@s.Name</dd>
							<dt>@s.Value</dt>
						}
					</dl>
				}
			</div>
	}


</div>